<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link rel="shortcut icon"
          href="/img/favicon.ico"
          type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180"
          href="/img/favicon.ico">

    <link rel="canonical" href="https://www.nerdycode.com/">

    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml"
          title="{{ metadata.title }}">

    <title>{{ renderData.title or title or metadata.title }}</title>

    <!-- Styles -->
    <!--
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    -->
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    {% if css_include %}
        <link rel="stylesheet" href="{{ css_include }}" />
    {% endif %}

    <!-- Global site tag (gtag.js) - Google Analytics -->

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-41791588-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];

      function gtag() {
        dataLayer.push(arguments);
      }

      gtag('js', new Date());

      gtag('config', 'UA-41791588-1');
    </script>

    <!-- Meta Stuff -->
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">

    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="website">
    <meta property="og:title" content="NerdyCode | Web Development and Software">
    <meta property="og:description" content="Web Development and Software">
    <meta property="og:url" content="https://www.nerdycode.com/">
    <meta property="og:site_name" content="NerdyCode">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@nerdycode">
</head>
<body>
<section class="section">
    <nav class="navbar is-fixed-top is-size-6" role="navigation" aria-label="dropdown navigation">
        <div class="container">

            <!-- Brand -->
            <div class="navbar-brand">
                <a href="{{ '/' | url }}" class="navbar-item">
                    <?xml version="1.0" encoding="UTF-8"?>
                    <svg width="258px" height="38px" viewBox="0 0 258 38" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:sketch="http://www.bohemiancoding.com/sketch/ns">
                        <title>NERDYCODE Copy 9</title>
                        <defs></defs>
                        <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" sketch:type="MSPage">
                            <text id="NERDYCODE-Copy-9" sketch:type="MSTextLayer" font-family="Menlo" font-size="48" font-weight="normal">
                                <tspan x="0" y="37" fill="#000000" class="nerdy">NERDY</tspan>
                                <tspan x="144.492188" y="37" fill="#329EBB" class="code">CODE</tspan>
                            </text>
                        </g>
                    </svg>
                </a>

                <!-- Responsive toggle -->
                <span class="navbar-burger burger" data-target="navbarMenu">
                <span></span>
                <span></span>
                <span></span>
            </span>
            </div>

            <!-- Menu -->
            <div id="navbarMenu" class="navbar-menu">
                <div class="navbar-end">
                {%- for entry in collections.all | eleventyNavigation %}
                    <li class="navbar-item is-nav-link {% if entry.url == page.url %} is-active{% endif
                    %}">
                        <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                    </li>
                {%- endfor %}
                    <theme-toggle></theme-toggle>
                </div>
            </div>
        </div>
    </nav>
</section>

<section{% if templateClass %} class="section {{ templateClass }}"{% endif %}>
    <div class="container">
        <div class="content">
    {{ content | safe }}
        </div>
    </div>
</section>

{% include '_footer.njk' %}
<script type="module" src="/js/theme-toggle.js" async defer></script>

</body>
</html>
